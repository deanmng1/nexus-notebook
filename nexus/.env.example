# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TITLE="PDF Comparison Service"
API_VERSION=1.0.0
DEBUG=False

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_TIMEOUT=600
CELERY_MAX_RETRIES=3
CELERY_WORKER_CONCURRENCY=4

# LLM Configuration (OPTIONAL - Currently not implemented)
# LLM_PROVIDER=openai  # Options: openai, anthropic
# OPENAI_API_KEY=sk-your-openai-key-here
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
# LLM_MODEL=gpt-4-turbo-preview  # or claude-3-opus-20240229
# LLM_TEMPERATURE=0.1
# LLM_MAX_TOKENS=4096
# LLM_TIMEOUT=120

# Processing Configuration
MAX_FILE_SIZE_MB=50
MIN_FILE_SIZE_BYTES=100
SUPPORTED_FORMATS=pdf
TEMP_DIR=/tmp/pdf_comparison
OUTPUT_DIR=./outputs
CLEANUP_TEMP_FILES=True
CLEANUP_AFTER_HOURS=24

# PDF Processing
PDF_DPI=300  # DPI for image extraction
PDF_MAX_PAGES=500
EXTRACT_IMAGES=True
EXTRACT_TABLES=True

# Diff Analysis
DIFF_CONTEXT_LINES=3
SIMILARITY_THRESHOLD=0.85
INCLUDE_UNCHANGED_SECTIONS=False

# Security
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
MAX_REQUEST_SIZE_MB=100
ENABLE_CORS=True
API_KEY_HEADER=X-API-Key
API_KEYS=[]  # Comma-separated list of valid API keys

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text
LOG_FILE=./logs/app.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days

# Database (optional - for persistence)
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/pdf_comparison
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_BURST=20

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# Feature Flags
ENABLE_CACHING=True
CACHE_TTL_SECONDS=3600
ENABLE_LLM_FALLBACK=True
ENABLE_ASYNC_PROCESSING=True
